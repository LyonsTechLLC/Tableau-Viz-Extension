<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>58.0</apiVersion>
    <isExposed>true</isExposed>
    <targets>
        <target>lightning__AppPage</target>
        <target>lightning__RecordPage</target>
        <target>lightning__HomePage</target>
        <target>lightningCommunity__Default</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__AppPage,lightning__RecordPage,lightning__HomePage,lightningCommunity__Default">
            <property
                name="vizUrl"
                type="String"
                label="The URL for the Tableau view"
                required="true"
                description="Click the Share button for the Tableau view. From the Share View dialog box, click Copy Link and paste the URL link here."
                default="https://public.tableau.com/views/LinkedIn-PerformanceOverview/LinkedIn-PerformanceOverview?:showVizHome=no&amp;:embed=true"
            />
            <property
                name="showTabs"
                type="Boolean"
                default="false"
                label="Show Tabs"
            />
            <property
                name="showToolbar"
                type="Boolean"
                default="false"
                label="Show Toolbar"
            />
            <property
                name="height"
                type="Integer"
                default="550"
                label="Height"
                required="true"
            />
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>